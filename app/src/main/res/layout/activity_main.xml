<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height= "250dp"
        android:padding="10dp"
        android:textSize="48sp"
        android:text="@string/calc_text"
        android:gravity="end|bottom"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/c"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:backgroundTint="@color/light_grey"
            android:textSize="24sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/ac"
            android:textColor="@color/white"
            android:onClick="onClear"
            tools:ignore="NestedWeights,UsingOnClickInXml"
            />

        <Button
            android:id="@+id/pm"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/light_grey"
            android:text="@string/pm"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:ignore="UsingOnClickInXml"
            android:onClick="onPM"/>

        <Button
            android:id="@+id/percen"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/light_grey"
            android:text="@string/percen"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            android:textSize="36sp"
            android:onClick="onPer"
            />
        <Button
            android:id="@+id/devide"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/orange"
            android:text="@string/devide"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            android:textSize="36sp"
            android:onClick="onOperator"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/seven"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:text="@string/_7"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:text="@string/_8"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:text="@string/_9"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/multi"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/orange"
            android:text="@string/multioly"
            android:textSize="36sp"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            android:onClick="onOperator"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/_4"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/_5"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            android:onClick="onDigit"/>
        <Button
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/_6"
            android:onClick="onDigit"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            />
        <Button
            android:id="@+id/minus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/orange"
            android:textSize="36sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="-"
            android:onClick="onOperator"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/_1"
            android:onClick="onDigit"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"

            />
        <Button
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/_2"
            android:onClick="onDigit"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"/>
        <Button
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/_3"
            android:onClick="onDigit"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/orange"
            android:onClick="onOperator"
            android:text="+"
            android:textSize="36sp"
            android:textColor="@color/white"
            tools:ignore="UsingOnClickInXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/zero"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:gravity="left|center"
            android:layout_marginRight="10dp"
            android:text="@string/_0"
            android:textColor="@color/white"
            tools:ignore="RtlHardcoded,UsingOnClickInXml"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/dot"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/black2"
            android:textSize="36sp"
            android:text="@string/dot"
            android:layout_marginRight="6dp"
            android:textColor="@color/white"
            android:onClick="onDecimalPoint"
            tools:ignore="UsingOnClickInXml"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/orange"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:text="@string/equal"
            android:onClick="onEqual"
            tools:ignore="UsingOnClickInXml"
            />

    </LinearLayout>

</LinearLayout>